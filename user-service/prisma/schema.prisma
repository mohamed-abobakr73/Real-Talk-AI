generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId String @id() @default(uuid())
  username String 
  email String @unique()
  password String?
  oauthProvider oauthProvider?
  profileImage String? @default("https://ucarecdn.com/d80e06b5-67cd-4a73-98db-b534a8f538a8/useravatar.jpg")
}

enum oauthProvider {
  google
  gihub
}